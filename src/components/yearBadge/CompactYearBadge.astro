---
interface Props {
  startYear: string | number;
  endYear?: string | number;
  class?: string;
  showIcon?: boolean;
  variant?: "primary" | "secondary" | "outline";
}

const {
  startYear,
  endYear,
  class: className = '',
  showIcon = true,
  variant = "primary"
} = Astro.props;

const displayEndYear = endYear || "Actual";
const sameYear = startYear === endYear && endYear !== undefined;

const getVariantClass = () => {
  switch (variant) {
    case "secondary":
      return "year-badge-secondary";
    case "outline":
      return "year-badge-outline";
    default:
      return "";
  }
};
---

<div class={`year-badge-compact ${getVariantClass()} ${className}`}>
  {showIcon && <i class="fas fa-calendar-alt"></i>}
  <time>
    {sameYear ? startYear : `${startYear} - ${displayEndYear}`}
  </time>
</div> 