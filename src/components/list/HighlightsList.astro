---
interface Props {
  highlights: string[];
}

const { highlights } = Astro.props;
---

<div class="highlights-card">
  <h4>Logros y Responsabilidades</h4>
  <ul>
    {highlights.map(highlight => (
      <li>
        <span class="bullet">â€¢</span>
        <span>{highlight}</span>
      </li>
    ))}
  </ul>
</div>

<style>
  .highlights-card {
    background: var(--bg-secondary);
    border-radius: 4px;
    padding: 1.5rem;
    border: 1px solid var(--border);
    box-shadow: none;
    width: 100%;
  }

  .highlights-card h4 {
    color: var(--text-color);
    font-size: 1rem;
    font-weight: 500;
    margin: 0 0 1rem 0;
  }

  .highlights-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .highlights-card li {
    display: flex;
    gap: 0.75rem;
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.5;
    align-items: flex-start;
  }

  .bullet {
    color: var(--text-color);
    font-size: 1.25rem;
    line-height: 1;
    font-weight: bold;
    flex-shrink: 0;
    margin-top: 0.125rem;
  }
</style> 