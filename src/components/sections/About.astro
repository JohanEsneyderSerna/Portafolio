---
import { Section } from "@sections/index";
import { getCVData } from "../../utils/cv";

const cvData = await getCVData();
const { summary } = cvData.basics;
---

<Section title="<i class='fas fa-id-card'></i> Perfil">
  <div class="about-content">
    <p>{summary}</p>
  </div>
</Section>

<style>
  .about-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem;
  }

  .about-content p {
    text-align: left;
    font-size: 0.95rem;
    line-height: 1.7;
    color: var(--text);
    margin: 0;
  }

  @media (max-width: 768px) {
    .about-content {
      padding: 0.5rem;
    }

    .about-content p {
      font-size: 0.9rem;
      line-height: 1.6;
    }
  }
</style>
