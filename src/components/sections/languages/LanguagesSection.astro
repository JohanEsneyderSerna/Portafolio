---
import { Section } from "@sections/index";
import { Accordion } from "@accordion/index";
import { getCVData } from "@utils/cv";

const cvData = await getCVData();
const { languages } = cvData;
---

<Section>
  <Accordion title="Idiomas" icon="fas fa-language">
    <div class="cards-grid languages-grid">
      {
        languages.map(({ language, fluency }) => (
          <div class="card language-card">
            <div class="card-content">
              <div class="card-header language-header">
                <div class="language-icon">
                  {language === "Español" ? (
                    <i class="fas fa-flag"></i>
                  ) : language === "Inglés" ? (
                    <i class="fas fa-language"></i>
                  ) : (
                    <i class="fas fa-globe"></i>
                  )}
                </div>
                <div class="language-content">
                  <h3 class="language-name">{language}</h3>
                  <p class="language-level">{fluency}</p>
                </div>
                {language === "Inglés" && (
                  <div class="language-badge">A2</div>
                )}
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </Accordion>
</Section>

<style>
  @import '@card/styles/cards.css';

  .languages-grid {
    gap: 1rem;
    padding: 1rem;
  }

  .language-card {
    transition: all 0.2s ease;
  }

  .language-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0;
  }

  .language-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background-color: var(--primary);
    color: var(--text-on-dark);
    border-radius: 50%;
    font-size: 1.2rem;
    flex-shrink: 0;
  }

  .language-content {
    flex: 1;
  }

  .language-name {
    margin: 0;
    font-size: 1rem;
    font-weight: 500;
    color: var(--text);
  }

  .language-level {
    margin: 0.2rem 0 0;
    font-size: 0.85rem;
    color: var(--secondary);
  }

  .language-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 2.2rem;
    height: 2.2rem;
    background-color: var(--primary);
    color: var(--text-on-dark);
    border-radius: 6px;
    font-weight: 500;
    font-size: 0.9rem;
    padding: 0 0.4rem;
  }

  @media (max-width: 768px) {
    .language-header {
      gap: 0.75rem;
    }

    .language-icon {
      width: 2.2rem;
      height: 2.2rem;
      font-size: 1rem;
    }

    .language-badge {
      min-width: 2rem;
      height: 2rem;
      font-size: 0.85rem;
    }
  }
</style> 